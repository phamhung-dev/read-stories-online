<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <header>
    <!-- Sidebar -->
    <%- include('../partials/sidebar') %>
    <!-- Sidebar -->
    <!-- Navbar -->
    <%- include('../partials/navbar') %>
    <!-- Navbar -->
  </header>
  <body>
    <main style="margin-top: 58px">
      <div class="container pt-4">
        <section class="mb-4">
          <div class="d-flex justify-content-end">
            <button
              type="button"
              class="btn btn-primary"
              data-mdb-toggle="modal"
              data-mdb-target="#addModal"
            >
              Add
            </button>
          </div>

          <div class="card mt-3 p-3">
            <div class="card-header py-3">
              <h5 class="mb-0 text-center"><strong>Genre</strong></h5>
            </div>

            <div class="card-body p-3">
              <table
                class="table align-middle mb-0 bg-white table-bordered"
                id="chapterTable"
              >
                <thead class="bg-light">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Published</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </section>
      </div>
      <!-- add modal -->
      <div
        class="modal fade"
        id="addModal"
        tabindex="-1"
        aria-labelledby="addModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add new genre</h5>
              <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="id" id="editId" />
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  id="addName"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="name"
                />
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Description</label>
                <input
                  id="addDescription"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="description"
                />
              </div>
              <div class="dropdown">
                <label for="name" class="form-label">Published</label>
                <select
                  class="form-select"
                  aria-label="Default select example"
                  id="addPublished"
                >
                  <option value="true">True</option>
                  <option value="false">False</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-mdb-dismiss="modal"
              >
                Close
              </button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="createGenre()"
              >
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- edit modal -->
      <div
        class="modal fade"
        id="editModal"
        tabindex="-1"
        aria-labelledby="editModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit genre</h5>
              <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="id" id="editId" />
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  id="editName"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="name"
                />
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Description</label>
                <input
                  id="editDescription"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="description"
                />
              </div>
              <div class="dropdown">
                <label for="name" class="form-label">Published</label>
                <select
                  class="form-select"
                  aria-label="Default select example"
                  id="editPublished"
                >
                  <option value="true">True</option>
                  <option value="false">False</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-mdb-dismiss="modal"
              >
                Close
              </button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="saveChanges()"
              >
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %>
  </body>
  <script>
    $(document).ready(function () {
      fetch("/api/admin/genres")
        .then((response) => response.json())
        .then((response) => {
          $("#chapterTable").DataTable({
            data: response.data,
            columns: [
              { data: "id" },
              { data: "name" },
              { data: "description" },
              { data: "published" },
              {
                data: "id",
                render: function (data, type, row) {
                  return `<button class="btn btn-primary" onclick="getGenreById('${data}')">Edit</button>`;
                },
              },
            ],
          });
        });
    });
    function getGenreById(id) {
      fetch(`/api/admin/genres/${id}/show`, {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then((response) => response.json())
        .then((response) => {
          console.log(response.data.published);
          if (response.message === "SUCCESS") {
            $("#editId").val(response.data.id);
            $("#editName").val(response.data.name);
            $("#editDescription").val(response.data.description);
            $("#editPublished").val(response.data.published.toString()).change();
            $("#editModal").modal("show");
          } else {
            alert(response.content);
          }
        });
    }

    function saveChanges() {
      const id = $("#editId").val();
      const name = $("#editName").val();
      const description = $("#editDescription").val();
      const published = $("#editPublished").val();
      const data = {
        name,
        description,
        published,
      };
      fetch(`/api/admin/genres/${id}/update`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      })
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          if (response.message === "SUCCESS") {
            window.location.reload();
          } else {
            alert(response.content);
          }
        });
    }

    function createGenre() {
      const name = $("#addName").val();
      const description = $("#addDescription").val();
      const published = $("#addPublished").val();
      const data = {
        name,
        description,
        published,
      };
      fetch("/api/admin/genres/create", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      })
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          if (response.message === "SUCCESS") {
            window.location.reload();
          } else {
            alert(response.content);
          }
        });
    }
  </script>
</html>

<body>

    <div class="wrap">
        <canvas id="sakura"></canvas>
    </div>

    <%- include('partials/preloader') %>
    
    <%- include('partials/header') %>

    <div class="container mb-5">
        <div class="row px" style="background: url(/public/img/manga_banner/log.jpg) fixed no-repeat center/cover; padding: 0 300px;">
            <div class="col-12 my-3">
                <h2 class="text-white text-center">Your Profile</h2>
            </div>
            <div class="col-12 mb-3">
                <div class="d-flex justify-content-center">
                    <a id="a_img_avatar"><img id="img_avatar" style="width: 120px; height: 120px; background-color: white; padding: 10px;"/></a>
                </div>
                <input type="file" accept="image/*" id="avatar" hidden>
            </div>
            <div class="col-12 mb-3">
                <label for="balance_profile" class="form-label">Balance</label>
                <input type="text" class="form-control" id="balance_profile" style="color: black;" readonly>
            </div>
            <div class="col-12 mb-3">
                <label for="name_profile" class="form-label">Name</label>
                <input type="text" class="form-control" id="name_profile" style="color: black;" required>
            </div>
            <div class="col-12 mb-3">
                <label for="email_profile" class="form-label">Email</label>
                <input type="email" class="form-control" id="email_profile" style="color: black;" readonly>
            </div>
            <div class="col-12 mb-3">
                <label for="password_profile" class="form-label">Password</label>
                <input type="password" class="form-control" id="password_profile" style="color: black;" required>
            </div>
            <div class="col-12 mb-3">
                <label for="retype_password_profile" class="form-label">Retype Password</label>
                <input type="password" class="form-control" id="retype_password_profile" style="color: black;" required>
            </div>
            <div class="col-12 mb-3">
                <button id="btn_update" class="modal_btn text-center">Update</button>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <%- include('partials/login') %>

    <script src="/public/js/jquery-3.6.0.min.js"></script>

    <script src="/public/js/bootstrap.min.js"></script>
    <script src="/public/js/popper.min.js"></script>

    <script src="/public/js/jquery.slicknav.min.js"></script>

    <script src="/public/js/slick.min.js"></script>

    <script src="/public/js/form_validation.js"></script>
    <script>
        $(document).ready(function() {
            $("#form").xvalidation({
                theme: "materialize"
            });
            $("#form").submit(function(evt) {
                evt.preventDefault();
                evt.stopPropagation();
                if ($("#form").data().xvalidation.methods.validate()) {
                    swal("Thanks!", "We Will Contact You Soon", "success");
                }
                return false;
            });
        });
    </script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js">
    </script>

    <script src="/public/js/star-rating.min.js"></script>

    <script src="/public/js/fontawsome.js"></script>

    <script src="/public/js/jquery.magnific-popup.js"></script>

    <script src="/public/js/acmeticker.min.js"></script>

    <script src="/public/js/jquery.scrollUp.min.js"></script>

    <script src="/public/js/main.js"></script>

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <header>
    <!-- Sidebar -->
    <%- include('../partials/sidebar') %>
    <!-- Sidebar -->
    <!-- Navbar -->
    <%- include('../partials/navbar') %>
    <!-- Navbar -->
  </header>
  <body>
    <main style="margin-top: 58px">
      <div class="container pt-4">
        <section class="mb-4">
          <div class="d-flex justify-content-end">
            <button
              type="button"
              class="btn btn-primary"
              data-mdb-toggle="modal"
              data-mdb-target="#addModal"
            >
              Add
            </button>
          </div>

          <div class="card mt-3 p-3">
            <div class="card-header py-3">
              <h5 class="mb-0 text-center"><strong>Chapter</strong></h5>
            </div>

            <div class="card-body p-3">
              <table
                class="table align-middle mb-0 bg-white table-bordered"
                id="chapterTable"
              >
                <thead class="bg-light">
                  <tr>
                    <th>ID</th>
                    <th>Picture Book</th>
                    <th>Name</th>
                    <th>Order Number</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </section>
      </div>
      <!-- add modal -->
      <div
        class="modal fade"
        id="addModal"
        tabindex="-1"
        aria-labelledby="addModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                Add new chapter
              </h5>
              <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="id" id="editId" />
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  id="addName"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="name"
                />
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Order number</label>
                <input
                  id="addOrderNumber"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="orderNumber"
                />
              </div>
              <div class="dropdown">
                <select
                  id="pictureBookSelect"
                  class="form-control mb-4"
                  name="pictureBook"
                ></select>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-mdb-dismiss="modal"
              >
                Close
              </button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="createChapter()"
              >
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- edit modal -->
      <div
        class="modal fade"
        id="editModal"
        tabindex="-1"
        aria-labelledby="editModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit chapter</h5>
              <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="id" id="editId" />
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  id="editName"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="name"
                />
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Order number</label>
                <input
                  id="editOrderNumber"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  name="orderNumber"
                />
              </div>
              <div class="dropdown">
                <select
                  id="editPictureBookSelect"
                  class="form-control mb-4"
                  name="pictureBook"
                ></select>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-mdb-dismiss="modal"
              >
                Close
              </button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="saveChanges()"
              >
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %>
  </body>
  <script>
    $(document).ready(function () {
      fetch("/api/admin/chapters")
        .then((response) => response.json())
        .then((response) => {
          $("#chapterTable").DataTable({
            data: response.data,
            columns: [
              { data: "id" },
              { data: "pictureBook.name" },
              { data: "name" },
              { data: "orderNumber" },
            ],
            columnDefs: [
              {
                targets: 4,
                data: null,
                render: function (data, type, row) {
                  return `
                <button type="button" class="btn btn-primary btn-sm" onclick="getChapterById('${data.id}')" ">Edit</button>
              `;
                },
              },
            ],
          });
        });
      load();
    });
    function getChapterById(id) {
      fetch(`/api/admin/chapters/${id}/show`, {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then((response) => response.json())
        .then((response) => {
          if (response.status !== "success") {
            $("#editId").val(response.data.id);
            $("#editName").val(response.data.name);
            $("#editOrderNumber").val(response.data.orderNumber);
            $("#editPictureBookSelect")
              .val(response.data.pictureBook.id)
              .change();
            $("#editModal").modal("show");
          }
        });
    }

    function saveChanges() {
      const id = $("#editId").val();
      const name = $("#editName").val();
      const orderNumber = $("#editOrderNumber").val();
      const pictureBook = $("#editPictureBookSelect").val();
      const data = {
        name,
        orderNumber,
        pictureBook,
      };
      fetch(`/api/admin/chapters/${id}/update`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      })
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          if (response.message === "SUCCESS") {
            window.location.reload();
          } else {
            alert(response.content);
          }
        });
    }

    function createChapter() {
      const name = $("#addName").val();
      const orderNumber = $("#addOrderNumber").val();
      const pictureBook = $("#pictureBookSelect").val();
      const data = {
        name,
        orderNumber,
        pictureBook,
      };
      fetch(`/api/admin/chapters/create`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      })
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          if (response.message === "SUCCESS") {
            window.location.reload();
          } else {
            alert(response.content);
          }
        });
    }

    function load() {
      fetch("/api/admin/picture-books")
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          const pictureBooks = response.data.map((pictureBook) => {
            return `<option value="${pictureBook.id}">${pictureBook.name}</option>`;
          });
          document.getElementById("pictureBookSelect").innerHTML = pictureBooks;
          document.getElementById("editPictureBookSelect").innerHTML =
            pictureBooks;
        });
    }
  </script>
</html>

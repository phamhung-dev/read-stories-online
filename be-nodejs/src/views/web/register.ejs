        $(document).ready(function(){
            $('#btn_register').on('click', function(){
                var name = $('#name_register').val();
                var email = $('#email_register').val();
                var password = $('#password_register').val();
                var retype_password = $('#retype_password_register').val();
                if(name == '' || email == '' || password == '' || retype_password == ''){
                    swal("Error!", "Please fill all the fields", "error");
                }
                else{
                    if(password == retype_password){
                        $.ajax({
                            url: '/api/authenticate/register',
                            type: 'POST',
                            data: {
                                name: name,
                                email: email,
                                password: password,
                                retypePassword: retype_password
                            },
                            success: function(response){
                                $('#name_register').val('');
                                $('#email_register').val('');
                                $('#password_register').val('');
                                $('#retype_password_register').val('');
                                swal("Success!", "You have successfully registered", "success");
                                setTimeout(function(){
                                    $('.js-show-modal1').click();
                                }, 2000);
                            },
                            error: function(response){
                                swal("Error!", response.responseJSON.data.content, "error");
                            }
                        });
                    }
                    else{
                        swal("Error!", "Password and retype password does not match", "error");
                    }
                }
            });
        });
    </script>
</body>

</html>
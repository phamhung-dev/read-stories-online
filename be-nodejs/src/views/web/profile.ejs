        $('#a_img_avatar').on('click', function() {
            $('#avatar').click();
        });

        $('#avatar').change(function() {
            var file = this.files[0];
            var reader = new FileReader();
            reader.onloadend = function() {
                $('#img_avatar').attr('src', reader.result);
            }
            if (file) {
                reader.readAsDataURL(file);
            } else {
                $('#img_avatar').attr('src', '');
            }
        });

        $(document).ready(function(){
            fetch('/api/user/profile',{
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'x-access-token': readCookie('token')
                }
            })
            .then(response => {
                if(response.ok){
                    return response.json();
                }
                else{
                    throw new Error('User not logged in');
                }
            }).then(response => {
                $('#balance_profile').val(response.data.balance);
                $('#name_profile').val(response.data.name);
                $('#email_profile').val(response.data.email);
                $('#img_avatar').attr('src', response.data.avatar);
            }).catch(err => {
                console.log(err);
                swal("Error!", "User not logged in", "error");
            });
        });

        $('#btn_update').on('click', function() {
            if($('#password_profile').val() != $('#retype_password_profile').val()){
                swal("Error!", "Password not match", "error");
                return;
            }
            var formData = new FormData();
            formData.append('name', $('#name_profile').val());
            if($('#password_profile').val() != ''){
                formData.append('password', $('#password_profile').val());
                formData.append('retypePassword', $('#retype_password_profile').val());
            }
            if($('#avatar')[0].files[0] != undefined){
                formData.append('avatar', $('#avatar')[0].files[0]);
            }
            fetch('/api/user/update-profile',{
                method: 'PUT',
                headers: {
                    'x-access-token': readCookie('token')
                },
                body: formData
            })
            .then(response => response.json())
            .then(response => {
                $('#password_profile').val('');
                $('#retype_password_profile').val('');
                swal("Information!", response.data.content ? response.data.content : "Updated successfully", "info");
            })
        });
